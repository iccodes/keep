{
  "required_api_version": "^2.0.0",
  "name": "Google Tasks Todo",
  "description": "Add todo items to Google Tasks",
  "developer_name": "Adam",
  "icon": "images/icon.png",
  "options": {
    "query_debounce": 0.1
  },
  "preferences": [
    {
      "id": "tasks_kw",
      "type": "keyword",
      "name": "Tasks",
      "description": "Add todo to Google Tasks",
      "default_value": "task"
    },
    {
      "id": "credentials_path",
      "type": "input",
      "name": "Credentials File Path",
      "description": "Path to your Google OAuth2 credentials.json file",
      "default_value": "~/.config/ulauncher_tasks/credentials.json"
    },
    {
      "id": "token_storage_path",
      "type": "input",
      "name": "Token Storage Path",
      "description": "Path to store OAuth2 tokens",
      "default_value": "~/.cache/ulauncher_tasks"
    },
    {
      "id": "tasklist_id",
      "type": "input",
      "name": "Task List ID",
      "description": "Google Tasks list ID (leave empty for default list)"
    }
  ]
}